---
const { posts } = Astro.props;
const { pathname } = Astro.url;
let pathName = pathname.split("/")[2];
---

<div class="p-4">
  <aside>
    <ul class="list-none p-2">
      {
        posts.map(
          (post: {
            url: string;
            frontmatter: { title: string; path: string };
          }) => (
            <li
              class={`${pathName === post.frontmatter.path ? "bg-[#fce100]" : ""} hover:bg-gray-200 duration-200`}
            >
              <a href={post.url} class="block p-2 text-white hover:text-black">
                {post.frontmatter.title}
              </a>
            </li>
          ),
        )
      }
    </ul>
  </aside>
</div>
